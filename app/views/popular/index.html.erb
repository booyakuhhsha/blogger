<h1>Most Popular Articles</h1>

<ul id="articles">
<% allArticles = Hash.new{} %>
<% @articles.each do |article| %>
	<% allArticles[article] = article.impressions.size %>
<% end %>
	<% d = allArticles.sort {|a,b| b[1]<=>a[1]} %>
	<% d[0][0].title %>
	<% d[0][1] %>
<% for i in 0..2 %>
	<li>
		<%= link_to d[i][0].title, article_path(d[i][0]) %>
		<%= "#{d[i][1]} views" %>
	</li>
<% end %>
	
</li>
</ul>